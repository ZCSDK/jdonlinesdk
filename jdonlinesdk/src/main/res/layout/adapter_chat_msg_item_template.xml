<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sobot_template1_item_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_sobot_template_item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sobot_chat_hollow_gray_bg"
        android:minHeight="115dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/sobot_template1_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/sobot_online_common_gray1"
            android:textSize="14sp" />

        <com.sobot.online.weight.image.SobotRCImageView
            android:id="@+id/sobot_template1_item_thumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/sobot_template1_item_title"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/online_img_loading"
            android:visibility="visible"
            app:round_corner_bottom_left="6dp"
            app:round_corner_bottom_right="6dp"
            app:round_corner_top_left="6dp"
            app:round_corner_top_right="6dp" />

        <TextView
            android:id="@+id/sobot_template1_item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sobot_template1_item_title"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/sobot_template1_item_thumbnail"
            android:layout_toRightOf="@id/sobot_template1_item_thumbnail"
            android:maxLines="1"
            android:textColor="@color/sobot_online_common_gray1"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sobot_template1_item_summary"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/sobot_template1_item_thumbnail"
            android:layout_toRightOf="@id/sobot_template1_item_thumbnail"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sobot_template1_item_lable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/sobot_online_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sobot_template1_item_other_flag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="end"
                android:lines="1"
                android:maxWidth="80dp"
                android:textColor="@color/sobot_online_common_gray1"
                android:textSize="12sp"
                android:visibility="visible" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_sobot_template_item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sobot_oval_white_bg">

        <TextView
            android:id="@+id/sobot_template_item_2_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:singleLine="true"
            android:textColor="@color/sobot_template2_lable_text_color"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>