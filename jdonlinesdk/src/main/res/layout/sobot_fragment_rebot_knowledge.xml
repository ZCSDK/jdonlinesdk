<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sobot_online_app_bg_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/sobot_online_line_color" />

    <TextView
        android:id="@+id/tv_online_select_rebot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/sobot_rebot_right_arrow"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingRight="15dp"
        android:paddingBottom="12dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/sobot_sp_15"
        android:textColor="@color/sobot_online_common_gray1"
        android:text="@string/online_all_rebot" />

    <TextView
        android:id="@+id/tv_online_select_rebot_ids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:paddingRight="15dp"
        android:paddingBottom="12dp"
        android:visibility="gone" />


    <View
        android:id="@+id/v_online_split"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/sobot_online_line_color" />


    <com.sobot.online.weight.recyclerview.swipemenu.SobotSwipeMenuRecyclerView
        android:id="@+id/ssmrv_online_rebot_knowledge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sobot_online_app_bg2_color"></com.sobot.online.weight.recyclerview.swipemenu.SobotSwipeMenuRecyclerView>

</LinearLayout>