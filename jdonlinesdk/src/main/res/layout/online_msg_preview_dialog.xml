<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sobot_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sobot_app_half_transparent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/sobot_doalig_bg_style"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="@string/online_str_whatsmsg_preview_heander"
            android:textColor="@color/sobot_online_common_gray1"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/sobot_online_line_color" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/online_str_whatsmsg_preview"
            android:textColor="@color/sobot_online_common_gray1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sobot_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:maxLines="20"
            android:singleLine="false"
            android:scrollbars="vertical"
            android:background="@drawable/sobot_shape_hollow_border_normal"
            android:padding="10dp"
            android:textColor="@color/sobot_online_common_gray1"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/sobot_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/sobot_online_color"
                android:gravity="center"
                android:padding="10dp"
                android:textAllCaps="false"
                android:text="@string/sobot_online_send"
                android:textColor="@color/sobot_online_white_color"
                android:textSize="16sp" />

            <Button
                android:id="@+id/sobot_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:gravity="center"
                android:padding="10dp"
                android:textAllCaps="false"
                android:text="@string/online_cancle"
                android:textColor="@color/sobot_online_common_gray1"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
