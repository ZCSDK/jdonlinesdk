<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sobot_online_app_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/work_order_category_small_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/work_order_category_small_checkbox"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sobot_pull_black_button_no_selected"
            android:contentDescription="@null"
            android:visibility="visible" />

        <TextView
            android:id="@+id/work_order_category_small_title"
            style="?android:attr/textViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/work_order_category_small_checkbox"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/sobot_online_common_gray1"
            android:textSize="@dimen/sobot_sp_14" />

        <ImageView
            android:id="@+id/work_order_category_small_ishave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/sobot_online_status_keep_select_icon"
            android:contentDescription="@null"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>