<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--   文本类型   -->
        <RelativeLayout
            android:id="@+id/work_order_customer_field_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp">

            <TextView
                android:id="@+id/work_order_customer_field_text_lable"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/sobot_online_common_gray2"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/work_order_customer_field_text_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/work_order_customer_field_text_img"
                android:layout_toRightOf="@+id/work_order_customer_field_text_lable"
                android:background="@null"
                android:textColor="@color/sobot_online_common_gray1"
                android:textColorHint="@color/sobot_online_common_gray3"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/work_order_customer_field_text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/work_order_customer_field_text_img"
                android:layout_toRightOf="@+id/work_order_customer_field_text_lable"
                android:background="@null"
                android:textColor="@color/sobot_online_common_gray1"
                android:textColorHint="@color/sobot_online_common_gray3"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/work_order_customer_field_text_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/work_order_customer_field_text_img"
                android:layout_toRightOf="@+id/work_order_customer_field_text_lable"
                android:background="@null"
                android:inputType="numberDecimal"
                android:textColor="@color/sobot_online_common_gray1"
                android:textColorHint="@color/sobot_online_common_gray3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/work_order_customer_date_text_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@+id/work_order_customer_field_text_img"
                android:layout_toRightOf="@+id/work_order_customer_field_text_lable"
                android:gravity="center_vertical"
                android:textColor="@color/sobot_online_common_gray1"
                android:textColorHint="@color/sobot_online_common_gray3"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/work_order_customer_field_text_img"
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/sobot_online_right_arrow" />
        </RelativeLayout>

        <!--   多行文本   -->
        <LinearLayout
            android:id="@+id/work_order_customer_field_more_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/work_order_customer_field_more_text_lable"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/sobot_online_common_gray2"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/work_order_customer_field_text_more_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/work_order_customer_field_more_text_lable"
                android:background="@null"
                android:maxLength="150"
                android:minHeight="102dp"
                android:textColor="@color/sobot_online_common_gray1"
                android:textColorHint="@color/sobot_online_common_gray3"
                android:textSize="14sp" />

        </LinearLayout>

        <!--   组合字段   -->
        <LinearLayout
            android:id="@+id/work_order_customer_field_group_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/work_order_customer_field_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/sobot_online_common_gray2"
                android:textSize="14sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/work_order_customer_field_group__rl_add"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/work_order_customer_field_group_add"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/online_add"
                android:textColor="@color/sobot_online_common_gray2" />

            <TextView
                android:id="@+id/work_order_customer_field_group_summy"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textColor="@color/sobot_online_common_gray2" />
        </RelativeLayout>

        <View
            android:id="@+id/work_order_customer_field_text_bootom_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_marginLeft="15dp"
            android:background="@color/sobot_online_line_color" />

    </LinearLayout>

</LinearLayout>