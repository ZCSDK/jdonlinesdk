<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sobot_online_app_bg_color"
    android:orientation="vertical">

    <include layout="@layout/sobot_online_base_header" />

    <RelativeLayout
        android:id="@+id/rv_sobot_online_online_status"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/sobot_shape_hollow_border_select">

        <TextView
            android:id="@+id/tv_sobot_online_online_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/sobot_status_green"
            android:drawablePadding="4dp"
            android:text="@string/online_zaixian"
            android:textColor="@color/sobot_online_color"
            android:textSize="@dimen/sobot_sp_15" />

        <ImageView
            android:id="@+id/iv_sobot_online_online_status"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/sobot_online_status_select_check_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv_sobot_online_onbusy_status"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/sobot_shape_hollow_border_normal">

        <TextView
            android:id="@+id/tv_sobot_online_onbusy_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/sobot_status_red"
            android:drawablePadding="4dp"
            android:text="@string/online_busy"
            android:textColor="@color/sobot_online_common_gray1"
            android:textSize="@dimen/sobot_sp_15" />

        <ImageView
            android:id="@+id/iv_sobot_online_onbusy_status"
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/sobot_online_status_select_check_icon"
            android:visibility="gone" />

    </RelativeLayout>

    <CheckBox
        android:id="@+id/cb_sobot_online_keep_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:button="@drawable/sobot_online_checkbox_selector"
        android:drawablePadding="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/sobot_keetp_this_select"
        android:textColor="@drawable/sobot_online_text_selector"
        android:textSize="@dimen/sobot_sp_13" />

    <TextView
        android:id="@+id/tv_sobot_online_start_reception"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/sobot_shape_online_btn_border_select"
        android:gravity="center"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:text="@string/sobot_start_reception"
        android:textColor="@color/sobot_online_white_color"
        android:textSize="@dimen/sobot_sp_16" />

</LinearLayout>