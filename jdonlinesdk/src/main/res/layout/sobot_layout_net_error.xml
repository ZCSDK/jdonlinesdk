<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sobot_online_app_bg_color"
    android:gravity="center_vertical">

    <!-- 显示加载文字的动画 -->

    <TextView
        android:id="@+id/sobot_txt_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/sobot_textReConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sobot_txt_loading"
        android:layout_centerInParent="true"
        android:textColor="@color/sobot_online_common_gray1"
        android:textSize="@dimen/sobot_sp_18" />

    <TextView
        android:id="@+id/sobot_btn_reconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sobot_textReConnect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/sobot_shape_hollow_border_normal"
        android:padding="20dp"
        android:textColor="@color/sobot_online_common_gray1" />
</RelativeLayout>