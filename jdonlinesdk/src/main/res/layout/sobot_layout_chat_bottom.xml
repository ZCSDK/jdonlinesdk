<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sobot_online_app_bg2_color"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sobot_custom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@color/sobot_lable_bg_color">

            <TextView
                android:id="@+id/tv_sobot_chat_time_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sobot_layout_online_lable_selector"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="7dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="7dp"
                android:singleLine="true"
                android:text="@string/sobot_string_time_alert"
                android:textColor="@color/sobot_lable_text_color"
                android:textSize="@dimen/sobot_sp_13" />

            <TextView
                android:id="@+id/tv_sobot_chat_request_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sobot_layout_online_lable_selector"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="7dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="7dp"
                android:singleLine="true"
                android:text="@string/sobot_str_chat_request_reply"
                android:textColor="@color/sobot_lable_text_color"
                android:textSize="@dimen/sobot_sp_13" />

            <TextView
                android:id="@+id/tv_sobot_chat_cod_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sobot_layout_online_lable_selector"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="7dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="7dp"
                android:singleLine="true"
                android:text="@string/sobot_str_cod_confirm"
                android:textColor="@color/sobot_lable_text_color"
                android:textSize="@dimen/sobot_sp_13" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/sobot_lable_bg_color">

            <TextView
                android:id="@+id/tv_sobot_chat_arrival_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sobot_layout_online_lable_selector"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="7dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="7dp"
                android:singleLine="true"
                android:text="@string/sobot_string_arrival_alert"
                android:textColor="@color/sobot_lable_text_color"
                android:textSize="@dimen/sobot_sp_13" />

            <TextView
                android:id="@+id/tv_sobot_chat_location_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sobot_layout_online_lable_selector"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="7dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="7dp"
                android:singleLine="true"
                android:text="@string/sobot_string_location_alert"
                android:textColor="@color/sobot_lable_text_color"
                android:textSize="@dimen/sobot_sp_13" />

            <TextView
                android:id="@+id/tv_sobot_chat_ask_for_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sobot_layout_online_lable_selector"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:paddingTop="7dp"
                android:paddingEnd="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="7dp"
                android:singleLine="true"
                android:text="@string/sobot_string_ask_for_location"
                android:textColor="@color/sobot_lable_text_color"
                android:textSize="@dimen/sobot_sp_13" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_sobot_chat_quick_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sobot_layout_online_lable_selector"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="7dp"
            android:singleLine="true"
            android:text="@string/sobot_kuaijihuifu"
            android:textColor="@color/sobot_lable_text_color"
            android:textSize="@dimen/sobot_sp_13"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_sobot_chat_intelligence_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sobot_layout_online_lable_selector"
            android:drawableLeft="@drawable/sobot_online_zhinenghuifu"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="7dp"
            android:singleLine="true"
            android:text="@string/online_intelligence_reply"
            android:textColor="@color/sobot_lable_text_color"
            android:textSize="@dimen/sobot_sp_13"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_sobot_chat_yaoping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sobot_layout_online_lable_selector"
            android:drawableLeft="@drawable/sobot_online_yaoping"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="7dp"
            android:singleLine="true"
            android:text="@string/sobot_online_yaoping"
            android:textColor="@color/sobot_lable_text_color"
            android:textSize="@dimen/sobot_sp_13"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_sobot_chat_service_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sobot_layout_lable_pressed"
            android:drawableLeft="@drawable/sobot_online_fuwuzongjie"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="7dp"
            android:singleLine="true"
            android:text="@string/sobot_online_fuwuzongjie"
            android:textColor="@color/sobot_lable_text_color"
            android:textSize="@dimen/sobot_sp_13"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/sobot_online_line_color"></View>

    <LinearLayout
        android:id="@+id/sobot_ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="7dp"
        android:paddingEnd="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="7dp">

        <!--语音布局-->
        <!--从编辑模式转到语音模式-->
        <ImageView
            android:id="@+id/sobot_btn_model_voice"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/sobot_vioce_button_selector"
            android:visibility="gone" />
        <!-- 按住说话  start -->

        <LinearLayout
            android:id="@+id/sobot_btn_press_to_speak"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/sobot_chatting_writemsg_selector"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/sobot_txt_speak_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizePresetSizes="1sp"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:lines="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/sobot_online_common_gray1"
                android:textSize="14sp" />
        </LinearLayout>
        <!--        语音结束-->

        <!-- 自定义的editText -->
        <com.sobot.online.weight.SobotContainsEmojiEditText
            android:id="@+id/sobot_et_sendmessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="@drawable/sobot_online_chatting_bottom_bg_blur"
            android:imeOptions="actionDone"
            android:maxHeight="96dp"
            android:minHeight="37dp"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="6dp"
            android:paddingBottom="2dp"
            android:textColor="@color/sobot_online_common_gray1"
            android:textSize="@dimen/sobot_sp_14"
            android:visibility="visible" />

        <!-- 表情按钮 -->
        <ImageButton
            android:id="@+id/sobot_btn_emoticon_view"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:background="@drawable/sobot_emoticon_button_selector"
            android:contentDescription="@null"
            android:visibility="gone" />


        <Button
            android:id="@+id/sobot_btn_send"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/sobot_shape_online_btn_border_select"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="@string/sobot_online_send"
            android:textColor="@color/sobot_online_white_color"
            android:textSize="@dimen/sobot_sp_14"
            android:visibility="gone" />

        <!-- 加号按钮 -->
        <Button
            android:id="@+id/sobot_btn_upload_view"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/sobot_online_picture_add_normal"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sobot_ll_bottom_lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sobot_online_white_color"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sobot_ask"
            android:textColor="@color/sobot_online_common_gray1"
            android:textSize="@dimen/sobot_sp_14" />

    </LinearLayout>

    <!-- 离线消息的各种布局 -->
    <com.sobot.online.weight.OfflineStateView
        android:id="@+id/rl_bottom_offline_state"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/sobot_online_app_bg2_color"
        android:visibility="gone">

    </com.sobot.online.weight.OfflineStateView>


    <!--点击加号按钮显示出来的图片、拍照、表情界面-->
    <com.sobot.online.weight.kpswitch.widget.KPSwitchPanelLinearLayout
        android:id="@+id/sobot_panel_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.sobot.online.weight.kpswitch.CustomeChattingPanel
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.sobot.online.weight.kpswitch.widget.KPSwitchPanelLinearLayout>


</LinearLayout>